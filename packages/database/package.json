{
  "name": "@forge/database",
  "version": "0.1.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts",
    "./schemas/*": "./src/schemas/*"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "db:generate": "supabase gen types typescript --local > src/supabase.ts",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase db push"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "eslint": "^8.56.0",
    "supabase": "^1.142.2",
    "typescript": "^5.3.3"
  }
}